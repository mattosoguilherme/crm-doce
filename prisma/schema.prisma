generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String
  nome        String?
  contato     String    @unique
  produto     String
  unidade     String
  matricula   String?   @unique
  aniversario DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Pedidos     Pedidos[]
  Comanda     Comanda[]

  @@map("user")
}

model Cardapio {
  id        Int       @id @default(autoincrement())
  urlFoto   String
  titulo    String
  descricao String
  preco     Float
  active    Boolean?  @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Pedidos   Pedidos[] @relation("CardapioToPedidos")

  @@map("cardapio")
}

model Pedidos {
  id        Int        @id @default(autoincrement())
  userId    String
  status    String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id])
  Cardapio  Cardapio[] @relation("CardapioToPedidos")

  comandaId Int?
  Comanda   Comanda? @relation(fields: [comandaId], references: [id])

  @@map("pedidos")
}

model Comanda {
  id            Int      @id @default(autoincrement())
  userId        String
  status        Boolean
  saldo_devedor Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id])

  // Correção: Explicitando o relacionamento 1:N com pedidos

  Pedidos Pedidos[]

  @@map("comanda")
}
